<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LaalDairy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Custom" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/tab_Color</item>
        <item name="colorPrimaryVariant">@color/text_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cursor_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.LaalDairy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.LaalDairy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!--    Theme for the welcome screen-->
    <style name="Theme.Welcome" parent="Theme.AppCompat.DayNight">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">#FF0000</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cursor_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

<!--    Tab Layout size -->
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>